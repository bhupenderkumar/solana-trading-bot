# Solana Trading Bot Configuration
# Copy this file to .env and fill in your values

# ===================
# REQUIRED SETTINGS
# ===================

# Solana RPC URL - Get a free one from QuickNode, Helius, or use public RPC
# Recommended: Use a dedicated RPC for production
SOLANA_RPC_URL=https://api.devnet.solana.com

# Wallet private key (base58 encoded)
# WARNING: Never commit this file with your actual private key!
# Generate a test wallet for development, use hardware wallet for production
WALLET_PRIVATE_KEY=

# ===================
# LLM SETTINGS (Choose ONE option)
# ===================

# OPTION 1 (RECOMMENDED): GitHub Models Proxy - FREE Claude access!
# Get your GitHub token: https://github.com/settings/tokens
# Token needs 'read:models' scope
USE_GITHUB_PROXY=true
GITHUB_TOKEN=
GITHUB_PROXY_URL=http://127.0.0.1:8080/v1
LLM_MODEL=claude-3.5-sonnet

# OPTION 2: Direct OpenAI API
# Get from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=

# OPTION 3: Direct Anthropic API
# Get from: https://console.anthropic.com/
# ANTHROPIC_API_KEY=

# ===================
# OPTIONAL SETTINGS
# ===================

# Drift environment: 'mainnet' for real trading, 'devnet' for testing
# IMPORTANT: Start with devnet for testing!
DRIFT_ENV=devnet

# How often (in seconds) to check price conditions
# Lower = more responsive but higher RPC usage
CHECK_INTERVAL_SECONDS=10

# Database URL (only change if not using Docker)
# DATABASE_URL=postgresql+asyncpg://trading:trading@localhost:5432/trading

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ===================
# SAFETY SETTINGS
# ===================

# Maximum position size in USD (optional, not implemented yet)
# MAX_POSITION_USD=1000

# Maximum daily loss before stopping (optional, not implemented yet)
# MAX_DAILY_LOSS_USD=100

# Simulation mode - test without executing real trades (optional)
# SIMULATION_MODE=true
