# Drift Trader Microservice Configuration

# Service settings
SERVICE_NAME=drift-trader
SERVICE_PORT=8101
DEBUG=false

# Solana/Drift settings
SOLANA_RPC_URL=https://api.devnet.solana.com
DRIFT_ENV=devnet

# Wallet private key (base58 encoded)
# IMPORTANT: This wallet signs all trades - keep secure!
WALLET_PRIVATE_KEY=your_wallet_private_key_here

# Main backend URL for callbacks
MAIN_BACKEND_URL=http://localhost:8100

# Rate limiting
MAX_ORDERS_PER_MINUTE=10
